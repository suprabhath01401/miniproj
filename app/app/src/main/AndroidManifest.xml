<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensestracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.NewTransactionActivity"
            android:label="@string/new_transaction_header"
            android:parentActivityName=".views.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".views.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.ChooseCurrencyActivity"
            android:label="@string/str_currency"
            android:parentActivityName=".views.SettingsActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>